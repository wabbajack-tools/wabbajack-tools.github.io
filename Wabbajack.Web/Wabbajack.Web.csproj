<Project Sdk="Microsoft.NET.Sdk.BlazorWebAssembly">

    <PropertyGroup>
        <TargetFramework>net6.0</TargetFramework>

        <!-- Currently required in the StatusDashboard converting DateTime to local time. -->
        <!-- <BlazorEnableTimeZoneSupport>false</BlazorEnableTimeZoneSupport>-->

        <!-- Remove Collaction Support. -->
        <BlazorWebAssemblyPreserveCollationData>false</BlazorWebAssemblyPreserveCollationData>

        <!-- Remove insecure UTF-7 encoding code. -->
        <EnableUnsafeUTF7Encoding>false</EnableUnsafeUTF7Encoding>

        <!-- Remove globalization-specific code and data. -->
        <InvariantGlobalization>false</InvariantGlobalization>
    </PropertyGroup>

    <ItemGroup>
        <PackageReference Include="Microsoft.AspNetCore.Components.WebAssembly" Version="6.0.0-preview.7.21378.6" />
        <PackageReference Include="Microsoft.AspNetCore.Components.WebAssembly.DevServer" Version="6.0.0-preview.7.21378.6" PrivateAssets="all" />
        <PackageReference Include="MudBlazor" Version="5.1.3" />
        <PackageReference Include="Wabbajack.DTOs" Version="3.0.0-alpha4" />
        <PackageReference Include="MudBlazor.Markdown" Version="0.0.5" />
    </ItemGroup>

    <ItemGroup>
        <ProjectReference Include="..\Wabbajack.Web.Generator\Wabbajack.Web.Generator.csproj" ReferenceOutputAssembly="false" OutputItemType="Analyzer" />
        <AdditionalFiles Include="..\posts\*.md" />
        <AdditionalFiles Include="..\docs\*.md" />
    </ItemGroup>
    
    <Target Name="RunPostcss" BeforeTargets="Build">
        <Exec Command="npm run build" />
    </Target>
    
</Project>
